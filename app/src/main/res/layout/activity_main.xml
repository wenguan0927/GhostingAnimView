<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <com.widget.anim.ghosting.MultiTrapezoidView
        android:id="@+id/mMTrapezoidV"
        android:layout_width="210dp"
        android:layout_height="188dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!--    <com.widget.anim.ghosting.ScoreAnimView-->
    <!--        android:id="@+id/mScoreAnimTv"-->
    <!--        android:layout_width="wrap_content"-->
    <!--        android:layout_height="wrap_content"-->
    <!--        android:layout_marginTop="15dp"-->
    <!--        app:layout_constraintTop_toTopOf="parent"-->
    <!--        app:layout_constraintLeft_toLeftOf="parent"-->
    <!--        app:layout_constraintRight_toRightOf="parent" />-->

    <com.widget.anim.ghosting.GhostingTextView
        android:id="@+id/mGhostingTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="7dp"
        android:paddingRight="7dp"
        android:minWidth="@dimen/score_text_size"
        android:minHeight="@dimen/score_text_size"
        android:shadowColor="@color/score_num_text_color"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:text="10"
        android:textColor="@color/score_num_text_color"
        android:textSize="@dimen/score_text_size"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:need_shake="true"
        app:stroke_color="@color/score_num_text_color"
        app:stroke_width="@dimen/score_anim_stroke_width" />

    <Button
        android:id="@+id/mPlayAnim"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="Play"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
